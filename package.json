    "node": ">=18.0.0",
    "npm": ">=8.0.0",
    "vscode": "^1.80.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.80.0",
    "@types/ws": "^8.5.0",
    "typescript": "^5.8.3",
    "nodemon": "^3.0.0",
    "rimraf": "^5.0.0",
    "eslint": "^8.50.0",
    "prettier": "^3.0.0"
  }
